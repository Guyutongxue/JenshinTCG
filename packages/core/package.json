{
  "name": "@gi-tcg/core",
  "version": "0.16.1",
  "type": "module",
  "description": "Genius Invokation TCG Simulator core library",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./builder": {
      "types": "./dist/builder.d.ts",
      "bun": "./src/builder/index.ts",
      "import": "./dist/builder.js"
    }
  },
  "scripts": {
    "check": "tsc --noEmit",
    "test": "bun test",
    "build:ohm": "ohm generateBundles -et src/query/query.ohm",
    "build:ts": "tsup --dts",
    "build:js": "tsup",
    "build": "bun build:ohm && bun build:ts",
    "build:prod": "bun build:ohm && bun build:js"
  },
  "dependencies": {
    "@gi-tcg/typings": "workspace:*",
    "@gi-tcg/utils": "workspace:*",
    "immer": "^10.0.3",
    "ohm-js": "^17.1.0"
  },
  "devDependencies": {
    "@ohm-js/cli": "^2.0.0",
    "prettier": "3.1.1"
  }
}
